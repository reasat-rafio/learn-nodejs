<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <body>
    <%- include ("partials/nav.ejs") %>
    <h1>Welcome to profile of <%= person %></h1>
    <p>Age:<%= data.age %></p>
    <p>job:<%= data.job %></p>
    <h2>Hobbies</h2>
    <ul>
      <% data.hobbies.forEach((item) =>{ %>
      <li><%= item %></li>
      <% }) %>
    </ul>
  </body>
  <style>
    body {
      background: skyblue;
      color: #fff;
      padding: 30px;
    }

    h1,
    h2 {
      font-size: 48px;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-align: center;
    }

    p,
    li {
      font-size: 15px;
      text-align: center;
    }
  </style>
</html>
